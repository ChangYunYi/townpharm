doctype html
html
  include ../includes/head.jade
  include ../includes/main_style.jade
  body
    include ../includes/main_nav.jade
    //contents
    .container-fluid.text-left
      .row.content
        .col-sm-2.sidenav
          include trips_sidenav.jade

        .col-sm-8
          // title, img1,2,3, content, author/password(edit or delete시), google map
          .container
            .col-sm-8
              h1 Add for Trips
              hr
              form(action='/trips/'+addTrip[0].category+'/'+addTrip[0].id+'/add' method='post' enctype='multipart/form-data')
                .form-group
                  select.w3-select.w3-select-default(name='category')
                    option(value='' selected, disabled) Choose Board
                    option(value='korea') trips in korea
                    option(value='abroad') trips abroad
                    option(value='news') 해외여행 News
                .form-group
                  input.w3-input(type='text' name='title' placeholder='Enter Title')
                .col-sm-6
                  .form-group
                    input.w3-input(type='text' name='author' placeholder='Enter author')
                .col-sm-6
                  .form-group
                    input.w3-input(type='password' name='password' placeholder='Enter password for edit, del')
                .col-sm-12
                  .form-group
                    textarea.form-control(rows='10' name='content' placeholder='Enter Contents (html tag 사용가능)')
                  .form-group
                    input.w3-input(type='file' name='img' multiple)
                  button.btn.btn-default.pull-right(type='submit') Submit
        .col-sm-2.sidenav
    hr
    include ../includes/footer.jade
