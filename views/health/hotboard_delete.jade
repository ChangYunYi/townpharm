doctype html
html
  // head_links
  include ../includes/head.jade
  // style
  include ../includes/main_style.jade
  body
    //navigation
    include ../includes/main_nav.jade
    //contents
    .container-fluid.text-center
      .row.content
        .col-sm-2.sidenav.text-left
          .panel-group
            .panel.panel-default
              .panel-heading
                .panel-title
                  a(data-toggle='collapse' href='#collapse1') 2016 Issues
              #collapse1.panel-collapse.collapse.in
                ul.list-group
                  each issue in rows
                    li.list-group-item
                      a(href='/health/hotboard/'+issue.id)= issue.title

        .col-sm-8.text-left
          // content blog 본문 구성 두번째로 나오는 data를 받는다
          if delIssue
            h2= delIssue.title
              hr
            h6= delIssue.writetime
              hr
            h4 정말 이 글을 삭제 하시겠습니까?
              hr
            form(role='form' action='/health/hotboard/'+delIssue.id+'/delete' method='post')
              button.btn.btn-default(type='submit') Delete
            a.btn.pull-right.btn-default(href='/health/hotboard/'+delIssue.id, role='button') Back
          else
            h2= rows[0].title
              hr
            h6= rows[0].writetime
              hr
            = rows[0].content
              hr
            a.btn.btn-default(href='/health/hotboard_add', role='button') add
        .col-sm-2.sidenav
          .well
            p ADS
          .well
            p ADS
      hr
    //footer
    include ../includes/footer.jade
