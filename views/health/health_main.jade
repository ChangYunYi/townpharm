doctype html
html
  include ../includes/head.jade
  include ../includes/main_style.jade
  body
    include ../includes/main_nav.jade
    //contents
    .container-fluid.text-left
      .row.content
        // sidenav basic list type
        .col-sm-2.sidenav
          include health_sidenav.jade
        .col-sm-8
          // drug image
          .w3-display-container.w3-container
            img(src='/images/medications.jpg' style='width: 100%; height: 280px' )
            .w3-display-bottomright.w3-container(style='color: white') what the hell....
          if issues
            h4 Recently Issues
            table.table.table-hover.table-condensed
              thead
                tr
                  th #
                  th Title
                  th Author
                  th Date
              tbody
                each issue in issues
                  tr
                    td= issue.id
                    td
                      a(href='/health/'+issue.category+'/'+issue.id)= issue.title
                    td= issue.author
                    td= issue.writetime
            a.btn.btn-default.pull-right(href='/health/'+issues[0].category+'/'+issues[0].id+'/add', role='button') ADD

        .col-sm-2.sidenav

    //footer
    hr
    br
    include ../includes/footer.jade
